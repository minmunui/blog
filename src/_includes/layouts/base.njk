<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default("Blog") }}</title>
    <meta name="description" content="{{ description | default('A personal blog about development, design, and tech.') }}">
    <link rel="icon" href="{{ '/assets/favicon.svg' | url }}" type="image/svg+xml">
    
    <link rel="canonical" href="https://minmunui.github.io{{ page.url | url }}">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://minmunui.github.io{{ page.url | url }}">
    <meta property="og:title" content="{{ title | default('Blog') }}">
    <meta property="og:description" content="{{ description | default('A personal blog about development, design, and tech.') }}">
    <meta property="og:image" content="{{ thumbnail | default(image) | default('https://minmunui.github.io/assets/infologo/pusan_univ.png') }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://minmunui.github.io{{ page.url | url }}">
    <meta property="twitter:title" content="{{ title | default('Blog') }}">
    <meta property="twitter:description" content="{{ description | default('A personal blog about development, design, and tech.') }}">
    <meta property="twitter:image" content="{{ thumbnail | default(image) | default('https://minmunui.github.io/assets/infologo/pusan_univ.png') }}">

    <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}">
    <script>
        // Check for dark mode preference
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>
</head>
<body class="min-h-screen bg-background text-foreground flex flex-col font-sans antialiased">
    
    <header class="sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 transition-transform duration-300">
        <div class="flex h-14 items-center w-full px-4 md:px-8">
            <div class="mr-4 hidden md:flex">
                <a href="{{ '/' | url }}" class="mr-6 flex items-center space-x-2">
                    <span class="hidden font-bold sm:inline-block">Blog</span>
                </a>
                <nav class="flex items-center space-x-6 text-sm font-medium">
                    <a href="{{ '/posts' | url }}" class="transition-colors hover:text-foreground/80 text-foreground/60">Blog</a>
                    <a href="{{ '/portfolio' | url }}" class="transition-colors hover:text-foreground/80 text-foreground/60">Portfolio</a>
                    <a href="{{ '/info' | url }}" class="transition-colors hover:text-foreground/80 text-foreground/60">Info</a>
                </nav>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="inline-flex items-center justify-center rounded-md font-medium transition-colors focus-visible:outline-none focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:text-accent-foreground h-9 py-2 mr-2 px-0 text-base hover:bg-transparent focus-visible:bg-transparent focus-visible:ring-0 focus-visible:ring-offset-0 md:hidden" type="button">
               <span class="sr-only">Toggle Menu</span>
               <svg stroke="currentColor" fill="none" class="h-6 w-6" viewBox="0 0 15 15" ><path d="M1.5 3C1.22386 3 1 3.22386 1 3.5C1 3.77614 1.22386 4 1.5 4H13.5C13.7761 4 14 3.77614 14 3.5C14 3.22386 13.7761 3 13.5 3H1.5ZM1.5 7.5C1.22386 7.5 1 7.72386 1 8C1 8.27614 1.22386 8.5 1.5 8.5H13.5C13.7761 8.5 14 8.27614 14 8C14 7.72386 13.7761 7.5 13.5 7.5H1.5ZM1.5 12C1.22386 12 1 12.22386 1 12.5C1 12.7761 1.22386 13 1.5 13H13.5C13.7761 13 14 12.7761 14 12.5C14 12.22386 13.7761 12 13.5 12H1.5Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
            </button>

            <div class="flex flex-1 items-center justify-between space-x-2 md:justify-end">
                <div class="w-full flex-1 md:w-auto md:flex-none">
                </div>
                <!-- Dark Mode Toggle -->
                <button id="theme-toggle" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 py-2 w-9 px-0">
                    <svg id="moon-icon" class="h-[1.2rem] w-[1.2rem] rotate-0 scale-100 transition-all dark:-rotate-90 dark:scale-0" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
                    <svg id="sun-icon" class="absolute h-[1.2rem] w-[1.2rem] rotate-90 scale-0 transition-all dark:rotate-0 dark:scale-100" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
                    <span class="sr-only">Toggle theme</span>
                </button>
            </div>
        </div>
        <!-- Mobile Menu Container -->
        <div id="mobile-menu" class="hidden md:hidden border-t bg-background">
            <div class="container py-2 grid gap-1 text-lg">
                <a href="{{ '/' | url }}" class="flex items-center font-medium hover:underline">Home</a>
                <a href="{{ '/posts' | url }}" class="flex items-center font-medium hover:underline">Blog</a>
                <a href="{{ '/portfolio' | url }}" class="flex items-center font-medium hover:underline">Portfolio</a>
                <a href="{{ '/info' | url }}" class="flex items-center font-medium hover:underline">Info</a>
            </div>
        </div>
    </header>

    <main class="py-6 md:py-10 w-full">
        {{ content | safe }}
    </main>

    <footer class="py-6 md:px-8 md:py-0">
      <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
        <p class="text-center text-sm leading-loose text-muted-foreground md:text-left">
          Built with <a href="https://www.11ty.dev/" target="_blank" class="font-medium underline underline-offset-4">Eleventy</a> & <a href="https://tailwindcss.com/" target="_blank" class="font-medium underline underline-offset-4">Tailwind CSS</a>.
        </p>
      </div>
    </footer>

    <script>
        const themeToggleBtn = document.getElementById('theme-toggle');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const header = document.querySelector('header');
        
        // Hide Header on Scroll
        let lastScrollY = window.scrollY;
        
        window.addEventListener('scroll', () => {
            const currentScrollY = window.scrollY;
            
            // Only trigger if scrolled down a bit to avoid jitter at top
            if (currentScrollY > 100) {
                if (currentScrollY > lastScrollY) {
                    // Start Hide
                    header.classList.add('-translate-y-full');
                } else {
                    // Show
                    header.classList.remove('-translate-y-full');
                }
            } else {
                header.classList.remove('-translate-y-full');
            }
            
            lastScrollY = currentScrollY;
        });

        
        // Theme Toggle
        themeToggleBtn.addEventListener('click', function() {
            if (localStorage.theme === 'dark') {
                localStorage.theme = 'light';
                document.documentElement.classList.remove('dark');
            } else {
                localStorage.theme = 'dark';
                document.documentElement.classList.add('dark');
            }
        });

        // Mobile Menu Toggle
        if(mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>

    <!-- Mermaid.js Support -->
    <script type="module">
        import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
        
        // Initialize with your preferred theme
        // Detect current theme to set mermaid theme? For now default/dark.
        const isDark = document.documentElement.classList.contains('dark');
        mermaid.initialize({ 
            startOnLoad: false,
            // securityLevel: 'loose', // Uncomment if needed
            theme: isDark ? 'dark' : 'default' 
        });

        document.addEventListener('DOMContentLoaded', async () => {
            // Find code blocks marked as mermaid
            // markdown-it usually renders: <pre><code class="language-mermaid">...</code></pre>
            const mermaidCodes = document.querySelectorAll('code.language-mermaid');
            
            for (const codeEl of mermaidCodes) {
                const preEl = codeEl.parentElement;
                // Only process if parent is <pre> to avoid inline codes if any
                if (preEl.tagName.toLowerCase() !== 'pre') continue;
                
                const codeContent = codeEl.textContent;
                const uniqueId = 'mermaid-' + Math.random().toString(36).substr(2, 9);
                
                // --- Structure ---
                // <div class="mermaid-wrapper ...">
                //   <div class="header ...">
                //      <span>Diagram</span> <button>Show Code</button>
                //   </div>
                //   <div class="diagram-container ..."><div class="mermaid">...</div></div>
                //   <div class="code-container hidden ..."><pre>...</pre></div>
                // </div>

                const wrapper = document.createElement('div');
                wrapper.className = 'mermaid-wrapper border rounded-md my-6 overflow-hidden bg-card text-card-foreground shadow-sm';
                
                // Header
                const header = document.createElement('div');
                header.className = 'bg-muted/50 px-4 py-2 flex justify-between items-center text-sm border-b';
                
                const title = document.createElement('div');
                title.className = 'font-semibold flex items-center gap-2';
                title.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-network"><rect x="16" y="16" width="6" height="6" rx="1"/><rect x="2" y="16" width="6" height="6" rx="1"/><rect x="9" y="2" width="6" height="6" rx="1"/><path d="M5 16v-3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3"/><path d="M12 12V8"/></svg> Mermaid Diagram';
                
                const toggleBtn = document.createElement('button');
                toggleBtn.textContent = 'Show Code';
                toggleBtn.className = 'inline-flex items-center justify-center rounded-md text-xs font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-7 px-2';
                
                header.appendChild(title);
                header.appendChild(toggleBtn);
                
                // Diagram Container
                const diagramContainer = document.createElement('div');
                diagramContainer.className = 'p-4 flex justify-center overflow-x-auto bg-white/50 dark:bg-black/20'; // Slight background for contrast
                
                const mermaidDiv = document.createElement('div');
                mermaidDiv.className = 'mermaid';
                mermaidDiv.textContent = codeContent; // mermaid.run will render this
                diagramContainer.appendChild(mermaidDiv);
                
                // Code Container
                const codeContainer = document.createElement('div');
                codeContainer.className = 'hidden p-4 bg-muted overflow-x-auto border-t';
                const codePre = document.createElement('pre');
                codePre.className = 'text-xs font-mono whitespace-pre';
                codePre.textContent = codeContent;
                codeContainer.appendChild(codePre);
                
                wrapper.appendChild(header);
                wrapper.appendChild(diagramContainer);
                wrapper.appendChild(codeContainer);
                
                // Replace preEl with wrapper
                preEl.replaceWith(wrapper);
                
                // Toggle Logic
                toggleBtn.addEventListener('click', () => {
                    const isCodeHidden = codeContainer.classList.contains('hidden');
                    if (isCodeHidden) {
                        codeContainer.classList.remove('hidden');
                        diagramContainer.classList.add('hidden');
                        toggleBtn.textContent = 'Show Diagram';
                    } else {
                        codeContainer.classList.add('hidden');
                        diagramContainer.classList.remove('hidden');
                        toggleBtn.textContent = 'Show Code';
                    }
                });
            }
            
            // Run Mermaid
            if (mermaidCodes.length > 0) {
                 await mermaid.run({
                    querySelector: '.mermaid'
                });
            }
        });
    </script>
</body>
</html>
